<table border="1">
  <tr>
    <th>house_num</th>
    <th>area</th>
    <th>city</th>
  </tr>

  <% current_user.addresses.each do |address| %>
    <tr>
      <td><%= address.house_number %></td>
      <td><%= address.area %></td>
      <td><%= address.city %></td>
      <td><%= link_to 'edit address', edit_address_path(current_user, address) %> </td>
      <td><%= link_to 'delete', address_path(address),
        method: :delete, data: { confirm: 'Are you sure?' }  %> </td>

    </tr>
  <% end %>
</table>
