<h1>Product list</h1>
<table border="1">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <th><%= product.name %></th>
      <th><%= product.description %></th>
      <th><%= product.price %></th>
      <th><%= product.quantity %></th>
    </tr>
  
  <%end%>
</table>